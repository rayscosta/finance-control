generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String        @id @default(cuid())
  email                  String        @unique
  password               String
  name                   String
  passwordResetToken     String?       @unique
  passwordResetExpires   DateTime?     @db.Timestamptz(6)
  createdAt              DateTime      @default(now()) @db.Timestamptz(6)
  updatedAt              DateTime      @updatedAt @db.Timestamptz(6)
  accounts               Account[]
  budgets                Budget[]
  categories             Category[]
  creditCards            CreditCard[]
  goals                  Goal[]
  recurringTransactions  Recurring[]
  transactions           Transaction[]

  @@map("users")
}

model Account {
  id             String        @id @default(cuid())
  userId         String
  name           String
  type           AccountType
  initialBalance Decimal       @db.Decimal(15, 2)
  currentBalance Decimal       @db.Decimal(15, 2)
  currency       String        @default("BRL")
  isActive       Boolean       @default(true)
  createdAt      DateTime      @default(now()) @db.Timestamptz(6)
  updatedAt      DateTime      @updatedAt @db.Timestamptz(6)
  transactions   Transaction[]
  user           User          @relation(fields: [userId], references: [id])

  @@index([userId, isActive])
  @@map("accounts")
}

model CreditCard {
  id             String                  @id @default(cuid())
  userId         String
  name           String
  bank           String
  lastFourDigits String                  @db.VarChar(4)
  limit          Decimal                 @db.Decimal(15, 2)
  closingDay     Int
  dueDay         Int
  isActive       Boolean                 @default(true)
  createdAt      DateTime                @default(now()) @db.Timestamptz(6)
  updatedAt      DateTime                @updatedAt @db.Timestamptz(6)
  bills          CreditCardBill[]
  transactions   CreditCardTransaction[]
  user           User                    @relation(fields: [userId], references: [id])

  @@index([userId, isActive])
  @@map("credit_cards")
}

model Category {
  id        String       @id @default(cuid())
  userId    String?      // NULL para categorias globais
  name      String
  type      CategoryType
  color     String?
  icon      String?
  isGlobal  Boolean      @default(false) // true para categorias do sistema
  isActive  Boolean      @default(true)
  createdAt DateTime     @default(now()) @db.Timestamptz(6)
  updatedAt DateTime     @updatedAt @db.Timestamptz(6)

  user         User?         @relation(fields: [userId], references: [id])
  transactions Transaction[]
  budgets      Budget[]

  @@index([userId, isActive])
  @@index([isGlobal, isActive])
  @@map("categories")
}

model Transaction {
  id              String          @id @default(cuid())
  userId          String
  accountId       String
  categoryId      String?
  amount          Decimal         @db.Decimal(15, 2)
  type            TransactionType
  description     String
  date            DateTime        @db.Timestamptz(6)
  referenceNumber String?
  extractData     Json?           @db.JsonB
  isRecurring     Boolean         @default(false)
  recurringType   RecurringType?
  createdAt       DateTime        @default(now()) @db.Timestamptz(6)
  updatedAt       DateTime        @updatedAt @db.Timestamptz(6)
  account         Account         @relation(fields: [accountId], references: [id])
  category        Category?       @relation(fields: [categoryId], references: [id])
  user            User            @relation(fields: [userId], references: [id])

  @@index([userId, date(sort: Desc)])
  @@index([accountId, date(sort: Desc)])
  @@index([categoryId, date(sort: Desc)])
  @@index([date(sort: Desc)])
  @@map("transactions")
}

model CreditCardTransaction {
  id                 String          @id @default(cuid())
  creditCardId       String
  amount             Decimal         @db.Decimal(15, 2)
  description        String
  date               DateTime        @db.Timestamptz(6)
  installments       Int             @default(1)
  currentInstallment Int             @default(1)
  merchant           String?
  category           String?
  billId             String?
  createdAt          DateTime        @default(now()) @db.Timestamptz(6)
  updatedAt          DateTime        @updatedAt @db.Timestamptz(6)
  bill               CreditCardBill? @relation(fields: [billId], references: [id])
  creditCard         CreditCard      @relation(fields: [creditCardId], references: [id])

  @@index([creditCardId, date(sort: Desc)])
  @@index([billId])
  @@map("credit_card_transactions")
}

model CreditCardBill {
  id           String                  @id @default(cuid())
  creditCardId String
  amount       Decimal                 @db.Decimal(15, 2)
  dueDate      DateTime                @db.Timestamptz(6)
  closingDate  DateTime                @db.Timestamptz(6)
  isPaid       Boolean                 @default(false)
  paidAt       DateTime?               @db.Timestamptz(6)
  createdAt    DateTime                @default(now()) @db.Timestamptz(6)
  updatedAt    DateTime                @updatedAt @db.Timestamptz(6)
  creditCard   CreditCard              @relation(fields: [creditCardId], references: [id])
  transactions CreditCardTransaction[]

  @@index([creditCardId, dueDate(sort: Desc)])
  @@index([creditCardId, isPaid])
  @@map("credit_card_bills")
}

model Budget {
  id         String   @id @default(cuid())
  userId     String
  categoryId String
  amount     Decimal  @db.Decimal(15, 2)
  spent      Decimal  @default(0) @db.Decimal(15, 2)
  month      Int
  year       Int
  createdAt  DateTime @default(now()) @db.Timestamptz(6)
  updatedAt  DateTime @updatedAt @db.Timestamptz(6)
  category   Category @relation(fields: [categoryId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@unique([userId, categoryId, month, year])
  @@index([userId, year, month])
  @@index([categoryId, year, month])
  @@map("budgets")
}

model Goal {
  id            String   @id @default(cuid())
  userId        String
  name          String
  targetAmount  Decimal  @db.Decimal(15, 2)
  currentAmount Decimal  @default(0) @db.Decimal(15, 2)
  deadline      DateTime @db.Timestamptz(6)
  createdAt     DateTime @default(now()) @db.Timestamptz(6)
  updatedAt     DateTime @updatedAt @db.Timestamptz(6)
  user          User     @relation(fields: [userId], references: [id])

  @@index([userId, deadline])
  @@map("goals")
}

model Recurring {
  id          String        @id @default(cuid())
  userId      String
  accountId   String
  categoryId  String?
  amount      Decimal       @db.Decimal(15, 2)
  type        TransactionType
  description String
  frequency   RecurringType
  startDate   DateTime      @db.Timestamptz(6)
  endDate     DateTime?     @db.Timestamptz(6)
  isActive    Boolean       @default(true)
  lastRun     DateTime?     @db.Timestamptz(6)
  nextRun     DateTime      @db.Timestamptz(6)
  createdAt   DateTime      @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime      @updatedAt @db.Timestamptz(6)
  user        User          @relation(fields: [userId], references: [id])

  @@index([userId, isActive, nextRun])
  @@index([nextRun, isActive])
  @@map("recurring_transactions")
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  entity    String
  entityId  String
  oldValue  Json?    @db.JsonB
  newValue  Json?    @db.JsonB
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now()) @db.Timestamptz(6)

  @@index([userId, createdAt(sort: Desc)])
  @@index([entity, entityId, createdAt(sort: Desc)])
  @@index([createdAt(sort: Desc)])
  @@map("audit_logs")
}

enum AccountType {
  CHECKING
  SAVINGS
  CREDIT
  INVESTMENT
  CRYPTO
}

enum CategoryType {
  INCOME
  EXPENSE
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

enum RecurringType {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}
